{
  "name": "personal-website",
  "description": "personal-website",
  "version": "0.0.1",
  "scripts": {
    "cover": "./scripts/adoc_from_bookcovers.py",
    "prerun": "./scripts/prerun.sh",
    "prerun:dev": "./scripts/prerun-dev.sh",
    "dev": "BUILDER=yarn-dev yarn prerun:dev; sapper dev",
    "dev:only": "sapper dev",
    "build": "BUILDER=yarn-build yarn prerun; yarn build:only",
    "build:only": "sapper build --legacy",
    "export": "yarn prerun; yarn export:only",
    "export:only": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "py": "cd __sapper__/export; python3 -m http.server",
    "cloudbuild": "cloud-build-local --config=cloudbuild.yaml --dryrun=false --substituions _FIREBASE_TOKEN= ../",
    "docker": "BUILDER=yarn-docker yarn prerun; docker build --tag=gcr.io/personal-c913b/personal-website .; docker run -e 'PORT=3000' -p 80:3000 gcr.io/personal-c913b/personal-website",
    "dockerrun": "docker run -e 'PORT=3000' -p 80:3000 gcr.io/personal-c913b/personal-website",
    "dockerinspect": "docker build --tag=gcr.io/personal-c913b/personal-website .; docker run -e 'PORT=3000' -p 80:3000 -t -i gcr.io/personal-c913b/personal-website /bin/bash",
    "cloud": "yarn prerun; docker build --tag=gcr.io/personal-c913b/personal-website .; docker push gcr.io/personal-c913b/personal-website",
    "deployclouddev": "gcloud beta run deploy personal-website --platform managed --image gcr.io/personal-c913b/personal-website --region us-central1",
    "cloudprod": "docker build --tag=gcr.io/personal-c913b/personal-website-prod .; docker push gcr.io/personal-c913b/personal-website-prod",
    "deploycloudprod": "gcloud beta run deploy personal-website-prod --platform managed --image gcr.io/personal-c913b/personal-website-prod --region us-central1",
    "firebase": "firebase deploy"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@beyonk/sapper-httpclient": "^3.5.1",
    "@fortawesome/free-brands-svg-icons": "^5.12.0",
    "asciidoctor": "^2.0.3",
    "asciidoctor-highlight.js": "^0.2.0",
    "fa-svelte": "^3.1.0",
    "firebase-tools": "^7.11.0",
    "glob": "^7.1.6",
    "he": "^1.2.0",
    "js-yaml": "^3.13.1",
    "node-fetch": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.4",
    "reading-time": "^1.2.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.27.0",
    "sass": "^1.24.0",
    "slugify": "^1.3.6",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^3.3.0"
  }
}
